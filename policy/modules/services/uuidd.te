# Declarations
#

type uuidd_t;
type uuidd_exec_t;
init_daemon_domain(uuidd_t, uuidd_exec_t)

permissive uuidd_t;

type uuidd_initrc_exec_t;
init_script_file(uuidd_initrc_exec_t)

type uuidd_var_lib_t;
files_type(uuidd_var_lib_t)

type uuidd_var_run_t;
