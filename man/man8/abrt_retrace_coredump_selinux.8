	/var/log/yum\.log.*
.br

.br
.B rpm_var_cache_t

	/var/cache/yum(/.*)?
.br
	/var/spool/up2date(/.*)?
.br
	/var/cache/PackageKit(/.*)?
.br

.br
.B rpm_var_run_t

	/var/run/yum.*
.br
	/var/run/PackageKit(/.*)?
.br

